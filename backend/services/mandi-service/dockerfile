# Use official Node.js LTS image
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy package.json and package-lock.json
COPY package.json ./

# Install dependencies
RUN npm install

# Copy source files
COPY . .

# Expose port (match your appâ€™s port)
EXPOSE 3003

# Start compiled app
CMD ["node", "dist/index.js"]
